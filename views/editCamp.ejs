<% layout('../layouts/boilerplate.ejs') -%>
    <h1>Modifica il campeggio:</h1>
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post">
        <label for="title">Titolo:</label>
        <input id="title" name="title" type="text" value="<%= camp.title %>">
        <br>
        <label for="description">Descrizione:</label>
        <br>
        <textarea cols="50" rows="7" name="description" id="description"><%= camp.description %></textarea>
        <br>
        <label for="location">Localit√†:</label>
        <input id="location" name="location" type="text" value="<%= camp.location %>">
        <label for="price">Prezzo:</label>
        <input id="price" name="price" type="number" min="0" value="<%= camp.price %>">
        <button>Invia!</button>
    </form>
    <br>
    <button><a href="/campgrounds/<%= camp._id %>">Indietro!</a></button>
