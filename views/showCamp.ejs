<% layout('../layouts/boilerplate.ejs') -%>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img class="card-img-top" src="<%= camp.image %>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= camp.title %>
                    </h5>
                    <p class="card-text">
                        <%= camp.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= camp.location %>
                    </li>
                    <li class="list-group-item">â‚¬ <%= camp.price %> / a notte</li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%= camp._id %>/edit" class="card-link btn btn-info">Modifica</a>
                    <form class="d-inline" action="/campgrounds/<%=camp._id%>?_method=DELETE" method="post">
                        <button class="btn btn-danger">Elimina</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-10">
                            2 giorni fa
                        </div>
                        <div class="col-2">
                            <a href="/campgrounds">Indietro!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
